<body>
    <div class="main_banner">
	    <img class ="video" src="assets/1.jpg"><div class="video_sample_text">오늘의 풍경입니다.</div>
	</div>
	
	
	<div class="portfolio_area" id="portfolio">
		<div class="container">
			<h1>Photo</h1>

			<%@posts.each do |post| %>
			      <div class="col-lg-4 col-md-4 col-xs-6" data-toggle="modal" data-target="#card_<%= post.id %>">
			          <div class="text-center" style="width: auto; height: auto; max-width: 300px; max-height: 300px; transform: scale(1); white-space: nowrap; overflow:hidden;">
			              <%= link_to post do %>
               			  <%= image_tag post.image.url, {:class=>"landscape"} %>
               			  <% end %>
			          </div>
			      </div>
			 <% end %>
			 
 		</div>
 	</div>

<footer>
		<p> &copy; Portfolio </p>
</footer>

</body>
